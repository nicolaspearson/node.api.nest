{
  "name": "node.api.nest",
  "version": "0.0.1",
  "description": "A simple Node.js API, written using Typescript and Nest",
  "author": "Nicolas Pearson",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && npm run copy:env",
    "start": "npm run copy:env && ts-node -r tsconfig-paths/register dist/index.js",
    "start:dev": "npm run copy:env && tsc-watch -p tsconfig.build.json --onSuccess \"node dist/index.js\"",
    "start:debug": "npm run copy:env && tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/index.js\"",
    "start:prod": "npm run copy:env && node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json",
    "copy:env": "cp ./src/env/*.json ./dist/env/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "ncu": "ncu",
    "ncu:u": "ncu -u"
  },
  "dependencies": {
    "@nestjs/common": "6.6.3",
    "@nestjs/core": "6.6.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "6.1.0",
    "@nestjs/platform-express": "6.6.3",
    "bcrypt": "~3.0.6",
    "module-alias": "2.2.1",
    "nconf": "~0.10.0",
    "passport": "0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.2",
    "typeorm": "~0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "6.6.3",
    "@types/dotenv": "~6.1.1",
    "@types/express": "4.17.1",
    "@types/jest": "24.0.18",
    "@types/nconf": "~0.10.0",
    "@types/node": "12.7.3",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.8",
    "dotenv": "~8.1.0",
    "jest": "24.9.0",
    "npm-check-updates": "3.1.21",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsc-watch": "2.4.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.19.0",
    "typescript": "3.6.2"
  },
  "_moduleAliases": {
    "@app": "dist"
  }
}
